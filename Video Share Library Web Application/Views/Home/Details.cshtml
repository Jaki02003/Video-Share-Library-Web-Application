@model VideoInfo

@{
    ViewData["Title"] = "Video Details";
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-body">
                <p class="card-text"><strong>Uploader:</strong> @ViewData["UploaderName"]</p>
                <p class="card-text"><strong>Views:</strong> @Model.Views</p>
                <p class="card-text"><strong>Likes:</strong> @Model.Likes</p>
                <p class="card-text"><strong>Dislikes:</strong> @Model.Dislikes</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Users who liked/disliked this video:</h5>
                <table class="table">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Like/Dislike</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ld in ViewData["LikeDislikes"] as List<LikeDislike>)
                        {
                            <tr>
                                <td>@ld.UserName</td>
                                <td>@(ld.Like ? "Like" : "Dislike")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>